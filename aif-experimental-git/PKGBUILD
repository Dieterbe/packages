# Contributor: Dieter Plaetinck <dieter@plaetinck.be>
pkgname=aif-experimental-git
pkgver=20090215
pkgrel=1
pkgdesc="The ArchLinux Installation Framework: latest from the git experimental branch"
arch=('i686' 'x86_64')
url="http://github.com/Dieterbe/aif/"
license=('GPL3')
depends=('bash' 'pacman')
makedepends=('git')
provides=('aif')
conflicts=('aif')
source=()
md5sums=()

_gitroot="git://github.com/Dieterbe/aif.git"
_gitname=experimental

build() {
  msg "Connecting to GIT server..."
  if [[ -d $srcdir/$pkgname-$pkgver ]]; then
    cd $srcdir/$pkgname-$pkgver && git pull origin $_gitname || return 1
  else
    git clone $_gitroot $srcdir/$pkgname-$pkgver || return 1
    cd $srcdir/$pkgname-$pkgver
	git checkout origin/$_gitname || return 1
  fi

  msg "GIT checkout done or server timeout"

	install -d $pkgdir/sbin
	install -d $pkgdir/usr/share/aif/docs
	install -d $pkgdir/usr/lib/aif/core
	install -d $pkgdir/usr/lib/aif/user
	install -D -m755 src/aif.sh $pkgdir/sbin/aif
	install -D -m644 HOWTO $pkgdir/usr/share/aif/docs
	install -D -m644 README $pkgdir/usr/share/aif/docs
	cp -rp src/core $pkgdir/usr/lib/aif/
	chmod -R 755 $pkgdir/usr/lib/aif/core
	cp -rp src/user $pkgdir/usr/lib/aif/
	chmod -R 755 $pkgdir/usr/lib/aif/user
}

# vim:set ts=2 sw=2 et:
